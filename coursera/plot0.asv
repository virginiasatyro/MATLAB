y_coordinates = [2, -4.2, 12.3];

plot(x_coordinates, y_coordinates) % line
plot(x_coordinates, y_coordinates, '*') % 3 * points 
% 3 argument - LineSpec
plot(x_coordinates, y_coordinates, 'rs') % red squares 
grid on
